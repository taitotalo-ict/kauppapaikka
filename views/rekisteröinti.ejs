<%- include('includes/header'); %>

<section class="hero is-fullheight-with-navbar">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-7">
                    <h1 class="title block has-text-centered">Rekisteröinti</h1>
                    <form action="/rekisterointi" class="box content" method="post">
                        <div class="field has-text-centered">
                            <img src="kuvat/DjangoKauppa_Logo_400.png" width="167">
                        </div>

                        <p>
                            <label for="id_username">Käyttäjätunnus:</label><br>
                            <input <% if (locals.errors.username) { %> class="input is-danger" <% } %> type="text" name="username" maxlength="150" autofocus required id="id_username" <% if (locals.form.username) { %>value="<%= form.username %>"<% } %>>
                            
                            <br><small style="color: grey">Vaaditaan. Enintään 150 merkkiä. Vain kirjaimet, numerot ja @/./+/-/_ ovat sallittuja.</small>
                            <% if (locals.errors.username) { locals.errors.username.forEach(error => { %>
                                <p class="has-text-danger"><%= error %></p>
                            <% }); } %>
                        </p>
                        
                        <p>
                            <label for="id_first_name">Etunimi:</label><br>
                            <input <% if (locals.errors.first_name) { %> class="input is-danger" <% } %> type="text" name="first_name" maxlength="30" id="id_first_name" <% if (locals.form.first_name) { %>value="<%= form.first_name %>"<% } %>>
                            
                            <br><small style="color: grey">Etunimi</small>
                            <% if (locals.errors.first_name) { locals.errors.first_name.forEach(error => { %>
                                <p class="has-text-danger"><%= error %></p>
                            <% }); } %>
                        </p>
                        
                        <p>
                            <label for="id_last_name">Sukunimi:</label><br>
                            <input <% if (locals.errors.last_name) { %> class="input is-danger" <% } %> type="text" name="last_name" maxlength="30" id="id_last_name" <% if (locals.form.last_name) { %>value="<%= form.last_name %>"<% } %>>
                            
                            <br><small style="color: grey">Sukunimi</small>
                            <% if (locals.errors.last_name) { locals.errors.last_name.forEach(error => { %>
                                <p class="has-text-danger"><%= error %></p>
                            <% }); } %>
                        </p>
                        
                        <p>
                            <label for="id_email">Sähköposti:</label><br>
                            <input <% if (locals.errors.email) { %> class="input is-danger" <% } %> type="email" name="email" maxlength="254" required id="id_email" <% if (locals.form.email) { %>value="<%= form.email %>"<% } %>>
                            
                            <br><small style="color: grey">Laita oikea sähköpostiosoittetta</small>
                            <% if (locals.errors.email) { locals.errors.email.forEach(error => { %>
                                <p class="has-text-danger"><%= error %></p>
                            <% }); } %>
                        </p>
                        
                        <p>
                            <label for="id_password1">Salasana:</label><br>
                            <input <% if (locals.errors.password1) { %> class="input is-danger" <% } %> type="password" name="password1" autocomplete="new-password" required id="id_password1">
                            
                            <br><small style="color: grey"><ul><li>Salasanasi ei voi olla liian samankaltainen muiden tietojesi kanssa.</li><li>Salasanasi tulee sisältää ainakin 8 merkkiä.</li><li>Salasanasi ei voi olla yleisesti käytetty salasana.</li><li>Salasanasi ei voi olla kokonaan numeerinen.</li></ul></small>
                            <% if (locals.errors.password1) { locals.errors.password1.forEach(error => { %>
                                <p class="has-text-danger"><%= error %></p>
                            <% }); } %>
                        </p>
                        
                        <p>
                            <label for="id_password2">Salasanan vahvistaminen:</label><br>
                            <input type="password" name="password2" autocomplete="new-password" required id="id_password2">
                            
                            <br><small style="color: grey">Syötä sama salasana tarkistuksen vuoksi toistamiseen.</small>
                        </p>

                        <div class="field">
                            <button class="button is-success">Rekisteröi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    /* Burger menu functionality */
    let burgerMenu = document.getElementById("burger-menu");
    let navbarMenu = document.getElementById("navbar-menu");
    burgerMenu.addEventListener("click", function () {
    burgerMenu.classList.toggle("is-active");
    navbarMenu.classList.toggle("is-active");
    });
</script>

</body>
</html>
